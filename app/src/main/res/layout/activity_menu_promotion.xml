<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuPromotion">

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_promotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <include
                        android:id="@+id/progress_loader"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        layout="@layout/include_progress_loader" />

                <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerLoader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_base_alpha="0.6"
                        app:shimmer_auto_start="true">

                    <ImageView
                            android:id="@+id/menu_imageShimmer"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:background="@color/colorVeryLightGray"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            tools:ignore="ContentDescription"/>

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="260dp"
                            android:padding="8dp">

                        <TextView
                                android:id="@+id/promotion_titleShimmer"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorVeryLightGray"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                        <LinearLayout
                                android:id="@+id/promotion_menu_typeShimmer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toBottomOf="@id/promotion_titleShimmer"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="RtlSymmetry">

                            <LinearLayout
                                    android:id="@+id/promotion_menu_type_onShimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="2dp"
                                    android:background="@drawable/background_labeled_button">

                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_star_filled_gray"
                                        android:alpha="0.6"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_menu_type_on_textShimmer"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        tools:ignore="HardcodedText,RtlHardcoded"/>
                            </LinearLayout>


                            <LinearLayout
                                    android:id="@+id/promotion_menu_onShimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:paddingRight="8dp"
                                    android:background="@drawable/background_labeled_button"
                                    tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

                                <ImageView
                                        android:id="@+id/promotion_menu_on_imageShimmer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="24dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/default_restaurant"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_menu_on_textShimmer"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginStart="5dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorGray"
                                        tools:ignore="HardcodedText"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/promotion_statusShimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="3dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/background_time_green"
                                    tools:ignore="RtlHardcoded">

                                <ImageView
                                        android:id="@+id/promotion_status_iconShimmer"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_white_48dp"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_status_textShimmer"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorWhite"
                                        tools:ignore="HardcodedText"/>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                                android:id="@+id/menu_separator_zeroShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/colorVeryLightGray"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_menu_typeShimmer"/>

                        <TextView
                                android:id="@+id/promotion_description_titleShimmer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:text="Description"
                                android:fontFamily="@font/poppins_medium"
                                android:textAllCaps="true"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator_zeroShimmer"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                                android:id="@+id/promotion_description_textShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorVeryLightGray"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@id/promotion_description_titleShimmer"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                    </android.support.constraint.ConstraintLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>


                <android.support.constraint.ConstraintLayout
                        android:id="@+id/promotion_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    <ImageView
                            android:id="@+id/promotion_poster_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/default_meal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="ContentDescription"/>

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            app:layout_constraintTop_toBottomOf="@id/promotion_poster_image"
                            app:layout_constraintStart_toStartOf="parent">

                        <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/promotion_interest_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/background_like_button"
                                app:sparkbutton_activeImage="@drawable/ic_star_filled_gray"
                                app:sparkbutton_inActiveImage="@drawable/ic_star_outlined_gray"
                                app:sparkbutton_iconSize="35dp"
                                app:sparkbutton_primaryColor="@color/colorPrimary"
                                app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                                app:sparkbutton_animationSpeed="1.5"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                                android:id="@+id/promotion_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                        <LinearLayout
                                android:id="@+id/promotion_menu_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toBottomOf="@id/promotion_title"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="RtlSymmetry">

                            <LinearLayout
                                    android:id="@+id/promotion_menu_type_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="2dp"
                                    android:background="@drawable/background_labeled_button">

                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_star_filled_gray"
                                        android:alpha="0.6"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_menu_type_on_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Promotion On All Menus"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        tools:ignore="HardcodedText,RtlHardcoded"/>
                            </LinearLayout>


                            <LinearLayout
                                    android:id="@+id/promotion_menu_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:paddingRight="8dp"
                                    android:background="@drawable/background_labeled_button"
                                    tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

                                <ImageView
                                        android:id="@+id/promotion_menu_on_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="24dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/default_restaurant"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_menu_on_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginStart="5dp"
                                        android:text="Cafe Java, Kampala Road"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorGray"
                                        tools:ignore="HardcodedText"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/promotion_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="3dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/background_time_green"
                                    tools:ignore="RtlHardcoded">

                                <ImageView
                                        android:id="@+id/promotion_status_icon"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_white_48dp"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_status_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Is On Today"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorWhite"
                                        tools:ignore="HardcodedText"/>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                                android:id="@+id/menu_separator_zero"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/colorVeryLightGray"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_menu_type"/>

                        <ImageView
                                android:id="@+id/promotion_time_icon"
                                android:src="@drawable/ic_calender_outline_gray"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="8dp"
                                android:alpha="0.6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator_zero"
                                tools:ignore="ContentDescription"/>

                        <TextView
                                android:id="@+id/promotion_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="5dp"
                                android:text="This is a description on a menu"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="13sp"
                                android:paddingEnd="106dp"
                                android:paddingRight="106dp"
                                android:textColor="@color/colorGray"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator_zero"
                                app:layout_constraintStart_toEndOf="@id/promotion_time_icon"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

                        <ImageView
                                android:id="@+id/promotion_reduction_icon"
                                android:src="@drawable/ic_minus_outline_gray"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="2dp"
                                android:alpha="0.6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_time"
                                tools:ignore="ContentDescription"/>

                        <TextView
                                android:id="@+id/promotion_reduction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="5dp"
                                android:text="This is a description on a menu"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="13sp"
                                android:paddingEnd="106dp"
                                android:paddingRight="106dp"
                                android:textColor="@color/colorGray"
                                app:layout_constraintTop_toBottomOf="@id/promotion_time"
                                app:layout_constraintStart_toEndOf="@id/promotion_reduction_icon"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

                        <ImageView
                                android:id="@+id/promotion_supplement_icon"
                                android:src="@drawable/ic_plus_outline_gray"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="2dp"
                                android:alpha="0.6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_reduction"
                                tools:ignore="ContentDescription"/>

                        <TextView
                                android:id="@+id/promotion_supplement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="5dp"
                                android:text="This is a description on a menu"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="13sp"
                                android:paddingEnd="106dp"
                                android:paddingRight="106dp"
                                android:textColor="@color/colorGray"
                                app:layout_constraintTop_toBottomOf="@id/promotion_reduction"
                                app:layout_constraintStart_toEndOf="@id/promotion_supplement_icon"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

                        <View
                                android:id="@+id/menu_separator"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/colorVeryLightGray"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_supplement"/>


                        <TextView
                                android:id="@+id/promotion_description_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:text="Description"
                                android:fontFamily="@font/poppins_medium"
                                android:textAllCaps="true"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                        <org.sufficientlysecure.htmltextview.HtmlTextView
                                android:id="@+id/promotion_description_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="This will be an html text view and will hold a very long string"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@id/promotion_description_title"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="HardcodedText"/>

                        <View
                                android:id="@+id/menu_separator_second"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/colorVeryLightGray"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/promotion_description_text"/>

                        <LinearLayout
                                android:id="@+id/menu_data_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator_second"
                                app:layout_constraintStart_toStartOf="parent">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="2dp"
                                    android:background="@drawable/background_labeled_button">

                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_clock_gray_24dp"
                                        android:alpha="0.6"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_created_at"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="12,789"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        tools:ignore="HardcodedText,RtlHardcoded"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="2dp"
                                    android:background="@drawable/background_labeled_button"
                                    tools:ignore="RtlHardcoded">

                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_star_filled_gray"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_interests"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="99,876"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        tools:ignore="HardcodedText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                                android:id="@+id/menu_separator_third"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/colorVeryLightGray"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/menu_data_view"/>

                        <LinearLayout
                                android:id="@+id/promotion_restaurant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toBottomOf="@id/menu_separator_third"
                                app:layout_constraintStart_toStartOf="parent">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <LinearLayout
                                        android:id="@+id/promotion_restaurant_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:paddingRight="8dp"
                                        android:background="@drawable/background_labeled_button"
                                        tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

                                    <ImageView
                                            android:id="@+id/menu_restaurant_image"
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            android:adjustViewBounds="true"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/default_restaurant"
                                            tools:ignore="ContentDescription,TooDeepLayout"/>

                                    <TextView
                                            android:id="@+id/promotion_restaurant_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginStart="5dp"
                                            android:text="Cafe Java, Kampala Road"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12sp"
                                            android:textColor="@color/colorGray"
                                            tools:ignore="HardcodedText"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/promotion_restaurant_distance_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button">

                                    <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_place_gray_24dp"
                                            android:alpha="0.6"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/promotion_restaurant_distance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="12 km"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12sp"
                                            tools:ignore="HardcodedText,RtlHardcoded"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/promotion_restaurant_work_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="2dp"
                                    android:background="@drawable/background_time_orange"
                                    tools:ignore="RtlHardcoded">

                                <ImageView
                                        android:id="@+id/promotion_restaurant_work_status_icon"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_clock_white_24dp"
                                        tools:ignore="ContentDescription"/>

                                <TextView
                                        android:id="@+id/promotion_restaurant_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Opening in 18 min"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorWhite"
                                        tools:ignore="HardcodedText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <android.support.constraint.ConstraintLayout
                                android:id="@+id/promotion_menus_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@id/promotion_restaurant"
                                app:layout_constraintStart_toStartOf="parent">

                            <View
                                    android:id="@+id/menu_separator_fourth"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/colorVeryLightGray"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:id="@+id/menu_dish_foods_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="8dp"
                                    android:text="Promoted Menus"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textAllCaps="true"
                                    app:layout_constraintTop_toBottomOf="@id/menu_separator_fourth"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText"/>

                            <android.support.v7.widget.RecyclerView
                                    android:id="@+id/promotion_menus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/menu_dish_foods_title"
                                    app:layout_constraintStart_toStartOf="parent"/>

                        </android.support.constraint.ConstraintLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

            </RelativeLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>