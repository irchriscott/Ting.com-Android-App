<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

    <android.support.constraint.ConstraintLayout
            android:layout_margin="8dp"
            android:padding="20dp"
            android:background="@drawable/background_dialog_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Request Waiter"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorGray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText,SpUsage" />

        <EditText
                android:id="@+id/dialog_message_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:gravity="top|start"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:textColor="@color/colorLightGray"
                android:background="@drawable/border_row"
                android:inputType="textMultiLine"
                android:hint="Enter Request Message"
                android:importantForAutofill="no"
                android:maxLines="10"
                android:minLines="7"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_title"
                tools:ignore="HardcodedText" />

        <TableLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_message_input">

            <TableRow
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                <Button
                        android:id="@+id/dialog_close"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:textColor="@color/colorWhite"
                        android:text="Cancel"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@drawable/background_red_gradient"
                        tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                <Button
                        android:id="@+id/dialog_send"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/colorWhite"
                        android:text="Send"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@drawable/background_primary_gradient"
                        tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>