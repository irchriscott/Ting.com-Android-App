<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:id="@+id/address_layout"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/border_bottom"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:id="@+id/user_address_swipe_reveal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mode="same_level"
            app:dragEdge="right">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:id="@+id/address_delete"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:background="@drawable/background_logout_button"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="ContentDescription"/>

                <ImageButton
                        android:id="@+id/address_edit"
                        android:src="@drawable/ic_edit_gray_24dp"
                        android:background="@drawable/background_logout_button"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@id/address_delete"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="ContentDescription,RtlHardcoded"/>

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/address_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_address_home"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="ContentDescription"/>

                    <TextView
                            android:id="@+id/address_name"
                            android:text="Hello World"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14dp"
                            android:layout_marginRight="80dp"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/address_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

                </android.support.constraint.ConstraintLayout>

        </FrameLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</android.support.constraint.ConstraintLayout>