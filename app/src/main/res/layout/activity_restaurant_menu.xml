<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RestaurantMenu">

        <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <include
                            android:id="@+id/progress_loader"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            layout="@layout/include_progress_loader" />

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/menu_view"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/menu_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/default_meal"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                app:layout_constraintTop_toBottomOf="@id/menu_image"
                                app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                    android:id="@+id/menu_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hello World"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:textSize="18dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText,SpUsage"/>

                            <RatingBar
                                    android:id="@+id/menu_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="14dp"
                                    android:numStars="5"
                                    app:layout_constraintTop_toBottomOf="@id/menu_name"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@id/menu_name"
                                    style="@style/AppTheme.SmallRating"
                                    android:theme="@style/AppTheme.SmallRating"/>

                            <ImageView
                                    android:id="@+id/menu_description_icon"
                                    android:src="@drawable/ic_paragraph_gray"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.6"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_rating"
                                    tools:ignore="ContentDescription"/>

                            <TextView
                                    android:id="@+id/menu_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="5dp"
                                    android:text="This is a description on a menu"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="13dp"
                                    android:paddingEnd="17dp"
                                    android:textColor="@color/colorGray"
                                    app:layout_constraintTop_toBottomOf="@id/menu_rating"
                                    app:layout_constraintStart_toEndOf="@id/menu_description_icon"
                                    tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

                            <LinearLayout
                                    android:id="@+id/menu_type_view"
                                    android:layout_marginTop="6dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_description">

                                <LinearLayout
                                        android:id="@+id/menu_subcategory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:paddingRight="8dp"
                                        android:background="@drawable/background_labeled_button"
                                        tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

                                    <ImageView
                                            android:id="@+id/menu_subcategory_image"
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            android:adjustViewBounds="true"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/default_user"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_subcategory_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginStart="5dp"
                                            android:text="Walking Mode"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorGray"
                                            tools:ignore="HardcodedText,SpUsage"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button">

                                    <ImageView
                                            android:id="@+id/menu_type_image"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_spoon_gray"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_type_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Food"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorGray"
                                            tools:ignore="HardcodedText,SpUsage"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button">

                                    <ImageView
                                            android:id="@+id/menu_category_image"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_category_gray"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_category_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Meal"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorGray"
                                            tools:ignore="HardcodedText,SpUsage"/>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                    android:id="@+id/menu_separator_zero"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/colorVeryLightGray"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_type_view"/>

                            <TextView
                                    android:id="@+id/menu_ingredients_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:text="Ingredients"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textAllCaps="true"
                                    app:layout_constraintTop_toBottomOf="@id/menu_separator_zero"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText"/>

                            <org.sufficientlysecure.htmltextview.HtmlTextView
                                    android:id="@+id/menu_ingredients"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="This will be an html text view and will hold a very long string"
                                    android:fontFamily="@font/poppins_regular"
                                    app:layout_constraintTop_toBottomOf="@id/menu_ingredients_title"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText"/>


                            <View
                                    android:id="@+id/menu_separator_first"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/colorVeryLightGray"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_ingredients"/>


                            <RelativeLayout
                                    android:id="@+id/menu_price_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="vertical"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_separator_first">

                                <android.support.constraint.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    <TextView
                                            android:id="@+id/menu_quantity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="2 packs / pieces"
                                            android:fontFamily="@font/poppins_medium"
                                            android:includeFontPadding="false"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            tools:ignore="HardcodedText"/>

                                    <TextView
                                            android:id="@+id/menu_new_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="UGX 35,000"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:textSize="30dp"
                                            android:includeFontPadding="false"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/menu_quantity"
                                            tools:ignore="HardcodedText,SpUsage"/>

                                    <TextView
                                            android:id="@+id/menu_old_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="UGX 40,000"
                                            android:fontFamily="@font/poppins_medium"
                                            android:includeFontPadding="false"
                                            android:paddingTop="14dp"
                                            android:paddingBottom="4dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/menu_new_price"
                                            app:layout_constraintBottom_toBottomOf="@id/menu_new_price"
                                            tools:ignore="HardcodedText"/>

                                    <ImageButton
                                            android:id="@+id/menu_like_button"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:src="@drawable/ic_like_outlined_gray"
                                            android:background="@drawable/background_like_button"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            tools:ignore="ContentDescription"/>

                                </android.support.constraint.ConstraintLayout>

                            </RelativeLayout>

                            <View
                                    android:id="@+id/menu_separator_second"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="4dp"
                                    android:background="@color/colorVeryLightGray"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_price_view"/>

                            <LinearLayout
                                    android:id="@+id/menu_data_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/menu_separator_second"
                                    app:layout_constraintStart_toStartOf="parent">

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button">

                                    <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_heart_outlined_gray"
                                            android:alpha="0.6"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_likes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="12,789"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button"
                                        tools:ignore="RtlHardcoded">

                                    <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_star_outlined_gray"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_reviews"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="99,876"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/menu_availability_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_time_green"
                                        tools:ignore="RtlHardcoded">

                                    <ImageView
                                            android:id="@+id/menu_availability_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_check_white_48dp"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_availability_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="Available"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorWhite"
                                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                    android:id="@+id/menu_separator_third"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/colorVeryLightGray"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/menu_data_view"/>

                            <LinearLayout
                                    android:id="@+id/menu_restaurant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/menu_separator_third"
                                    app:layout_constraintStart_toStartOf="parent">

                                <LinearLayout
                                        android:id="@+id/menu_restaurant_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:paddingRight="8dp"
                                        android:background="@drawable/background_labeled_button"
                                        tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

                                    <ImageView
                                            android:id="@+id/menu_restaurant_image"
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            android:adjustViewBounds="true"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/default_restaurant"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_restaurant_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginStart="5dp"
                                            android:text="Cafe Java, Kampala Road"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorGray"
                                            tools:ignore="HardcodedText,SpUsage"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/menu_restaurant_distance_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_labeled_button">

                                    <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_place_gray_24dp"
                                            android:alpha="0.6"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_restaurant_distance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="12 km"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/menu_restaurant_work_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingBottom="2dp"
                                        android:background="@drawable/background_time_orange"
                                        tools:ignore="RtlHardcoded">

                                    <ImageView
                                            android:id="@+id/menu_restaurant_work_status_icon"
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_clock_white_24dp"
                                            tools:ignore="ContentDescription"/>

                                    <TextView
                                            android:id="@+id/menu_restaurant_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="Opening in 18 min"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textSize="12dp"
                                            android:textColor="@color/colorWhite"
                                            tools:ignore="HardcodedText,SpUsage"/>

                                </LinearLayout>

                            </LinearLayout>

                            <android.support.constraint.ConstraintLayout
                                    android:id="@+id/menu_dish_foods_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/menu_restaurant"
                                    app:layout_constraintStart_toStartOf="parent">

                                <View
                                        android:id="@+id/menu_separator_fourth"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/colorVeryLightGray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                <TextView
                                        android:id="@+id/menu_dish_foods_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:text="Dish Foods"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAllCaps="true"
                                        app:layout_constraintTop_toBottomOf="@id/menu_separator_fourth"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:ignore="HardcodedText"/>

                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/menu_dish_foods_recycler_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/menu_dish_foods_title"
                                        app:layout_constraintStart_toStartOf="parent"/>

                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                    android:id="@+id/menu_promotions_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/menu_dish_foods_view"
                                    app:layout_constraintStart_toStartOf="parent">

                                <View
                                        android:id="@+id/menu_separator_firth"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/colorVeryLightGray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                <TextView
                                        android:id="@+id/menu_promotions_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:text="Promotions"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAllCaps="true"
                                        app:layout_constraintTop_toBottomOf="@id/menu_separator_firth"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:ignore="HardcodedText"/>

                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/menu_promotions_recycler_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/menu_promotions_title"
                                        app:layout_constraintStart_toStartOf="parent"/>

                            </android.support.constraint.ConstraintLayout>


                            <android.support.constraint.ConstraintLayout
                                    android:id="@+id/menu_reviews_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/menu_promotions_view"
                                    app:layout_constraintStart_toStartOf="parent">

                                <View
                                        android:id="@+id/menu_separator_sixth"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/colorVeryLightGray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                <TextView
                                        android:id="@+id/menu_reviews_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="8dp"
                                        android:text="Ratings &amp; Reviews"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAllCaps="true"
                                        app:layout_constraintTop_toBottomOf="@id/menu_separator_sixth"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:ignore="HardcodedText"/>

                                <android.support.constraint.ConstraintLayout
                                        android:id="@+id/menu_rating_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/menu_reviews_title"
                                        app:layout_constraintStart_toStartOf="parent">

                                    <TextView
                                            android:id="@+id/menu_reviews_average"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:paddingRight="12dp"
                                            android:paddingLeft="12dp"
                                            android:text="4.9"
                                            android:textColor="@color/colorGray"
                                            android:includeFontPadding="false"
                                            android:textSize="36sp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="HardcodedText"/>

                                    <TextView
                                            android:id="@+id/menu_reviews_average_max"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:includeFontPadding="false"
                                            android:text="Out of 5"
                                            tools:ignore="HardcodedText"
                                            app:layout_constraintStart_toStartOf="@id/menu_reviews_average"
                                            app:layout_constraintTop_toBottomOf="@id/menu_reviews_average"
                                            app:layout_constraintEnd_toEndOf="@id/menu_reviews_average"/>

                                    <com.github.mikephil.charting.charts.HorizontalBarChart
                                            android:id="@+id/menu_rating_percents"
                                            android:layout_width="match_parent"
                                            android:layout_height="85dp"
                                            android:layout_marginLeft="75dp"
                                            app:layout_constraintStart_toEndOf="@id/menu_reviews_average"
                                            app:layout_constraintTop_toTopOf="parent"
                                            tools:ignore="RtlHardcoded"/>

                                </android.support.constraint.ConstraintLayout>

                                <View
                                        android:id="@+id/menu_separator_seventh"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginTop="8dp"
                                        android:background="@color/colorVeryLightGray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/menu_rating_view"/>

                                <include
                                        android:id="@+id/empty_data"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/menu_separator_seventh"
                                        layout="@layout/include_empty_data" />

                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/menu_reviews_recycler_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/menu_separator_seventh"
                                        app:layout_constraintStart_toStartOf="parent"/>

                                <Button
                                        android:id="@+id/menu_reviews_show_more"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/global_show_more"
                                        android:textAllCaps="true"
                                        android:fontFamily="@font/poppins_medium"
                                        android:background="@drawable/button_clear"
                                        android:textColor="@color/colorGray"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintStart_toEndOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/menu_reviews_recycler_view"/>

                            </android.support.constraint.ConstraintLayout>

                        </android.support.constraint.ConstraintLayout>

                    </android.support.constraint.ConstraintLayout>

                </RelativeLayout>

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>