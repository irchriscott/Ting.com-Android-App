<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorGray"
        tools:context=".activities.moment.CaptureMoment">

    <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cameraPictureSizeAspectRatio="1:1"
            app:cameraVideoSizeAspectRatio="1:1"
            app:cameraVideoSizeBiggest="true"
            app:cameraPictureSizeBiggest="true"
            app:cameraGestureTap="autoFocus"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraGestureScrollHorizontal="filterControl1"
            app:cameraGestureScrollVertical="filterControl2"
            app:cameraFacing="back"
            app:cameraHdr="off"
            app:cameraFlash="auto"
            app:cameraWhiteBalance="auto"
            app:cameraAudio="on"
            app:cameraGrid="off"
            app:cameraPlaySounds="true"
            app:cameraVideoCodec="deviceDefault"
            app:cameraVideoBitRate="0"
            app:cameraUseDeviceOrientation="true"
            app:cameraPictureMetering="true"
            app:cameraPictureSnapshotMetering="false"
            app:cameraPictureFormat="jpeg"
            app:cameraRequestPermissions="true"
            app:cameraPreviewFrameRate="0"
            app:cameraExperimental="false"
            app:cameraAutoFocusResetDelay="0"/>

    <com.camerakit.CameraKitView
            android:id="@+id/camera_view_kit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:keepScreenOn="true"
            app:camera_flash="auto"
            app:camera_facing="back"
            app:camera_focus="continuous"
            app:camera_permissions="camera" />

    <ImageButton
            android:id="@+id/close_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/background_logout_button"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semi_bold"
            android:elevation="0dp"
            android:src="@drawable/ic_close_white_24dp"
            tools:ignore="ContentDescription,UnusedAttribute"/>

    <ImageView
            android:id="@+id/toggle_flash"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semi_bold"
            android:elevation="0dp"
            android:src="@drawable/ic_camera_flash_auto"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription,UnusedAttribute"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="18dp">

            <ImageView
                    android:id="@+id/open_gallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:src="@drawable/ic_open_gallery"/>


            <com.iammert.library.cameravideobuttonlib.CameraVideoButton
                    android:id="@+id/take_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    app:cvb_recording_color="#5FBE78"/>


            <ImageView
                    android:id="@+id/switch_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_switch_camera"/>

    </RelativeLayout>

</RelativeLayout>