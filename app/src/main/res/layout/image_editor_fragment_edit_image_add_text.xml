<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/image_edit_back" />

    <LinearLayout
        android:id="@+id/add_text_btn"
        style="@style/ImageEditorOptionStyle"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            style="@style/ImageEditorIconStyle"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_text" />

        <TextView
            style="@style/ImageEditorOptionTextStyle"
            android:text="@string/image_editor_text" />

    </LinearLayout>
</RelativeLayout>
